<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Public"]</title>

        <!-- My stylesheet -->
        <link rel="stylesheet" href="/css/site.min.css">
        <!-- Material Design Lite Stylesheet -->
        <link rel="stylesheet" href="https://code.getmdl.io/1.0.6/material.indigo-pink.min.css">
        <!-- Material Design Icons Resource -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    </head>
    <body>
        <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
          <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
              <span class="mdl-layout__drawer">Amaral Guincho</span>
              <div class="mdl-layout-spacer"></div>
              <nav class="mdl-layout-title">
                <a class="mdl-navigaition__link" asp-controller="Home" asp-action="Index">Home</a>
                <a class="mdl-navigaition__link" asp-controller="Home" asp-action="About">About</a>
                <a class="mdl-navigaition__link" asp-controller="Home" asp-action="Contact">Contact</a>
              </nav>
            </div>
          </header>
          <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Amaral Guincho</span>
            <nav class="mdl-navigation">
              <a class="mdl-navigaition__link" asp-controller="Home" asp-action="Index">Home</a>
              <a class="mdl-navigaition__link" asp-controller="Home" asp-action="About">About</a>
              <a class="mdl-navigaition__link" asp-controller="Home" asp-action="Contact">Contact</a>
            </nav>
          </div>
        </div>
        <main class="mdl-layout-content">
          <div class="page-content">
            @RenderBody()
          </div>
            <hr />
            <footer>
                <p>&copy; 2016 - io.Etep</p>
            </footer>
          </main>

        <!-- My JS files -->
        <script src="~/js/site.js" asp-append-version="true"></script>

        <!-- Material Design Lite Scripts -->
        <script src="https://storage.googleapis.com/code.getmdl.io/1.0.6/material.min.js"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
